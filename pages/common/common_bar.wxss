
.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  background:#ff5555;
}

.status-bar {
  background: #ff5555;
}

.title-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.share-view {
  width: 17%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.back-view {
  width: 15%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.home-share {
  width: 60rpx;
  height: 60rpx;
  padding: 6rpx;
  margin-left: 6rpx;
}

.share-btn {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0);
}

.share-btn::after {
  border: 0;
}

.back-img {
  width: 48rpx;
  height: 48rpx;
  padding: 6rpx;
}

.search-home-view {
  width: 53%;
  height: 57rpx;
  background:  rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.search-view {
  width: 53%;
  height: 57rpx;
  background:  rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.search-img {
  width: 32rpx;
  height: 32rpx;
}

.search-list-img {
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}

.search-home-txt {
  width: 130rpx;
  font-size: 26rpx;
  color: #333;
  height: 57rpx;
  line-height: 57rpx;
  padding-left: 10rpx;
  text-align: center;
}

.search-txt {
  width: 250rpx;
  font-size: 26rpx;
  color: #fff;
  height: 57rpx;
  line-height: 57rpx;
  text-align: left;
  padding-left: 10rpx;
}

.search-holder-txt {
  font-size: 26rpx;
  color: #fff;
  height: 57rpx;
  line-height: 57rpx;
}

.clear-img {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 10rpx;
}

.title-view {
  width: 70%;
  height: 57rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.title-txt {
  font-size: 14pt;
  color: #fff;
  height: 57rpx;
  line-height: 57rpx;
}

.only-title-view {
  width: 53%;
  height: 57rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.only-title-txt {
  font-size: 14pt;
  color: #fff;
  height: 32rpx;
  line-height: 32rpx;
}
