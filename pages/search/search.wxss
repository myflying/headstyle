@import "/pages/common/common_bar.wxss";

page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.content-view {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.every-one {
  width: 675rpx;
  height: 100rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 18pt;
  color: #000;
}

.hot-view {
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  margin-left: 2%;
  margin-top: 2%;
}

.hot-txt {
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  background: #f6f7fa;
  color: #4e5a72;
  border-radius: 20px;
  margin-left: 2%;
  margin-right: 2%;
  margin-bottom: 20rpx;
  font-size: 10pt;
  display: flex;
  justify-content: center;
  align-items: center;
}
