page{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.container_edit{
  height:60%;
  width:100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: center;
}
.bg{
  z-index:0;
  height: 300px;
  width:300px;
}
button{
  margin-top:120px;
}
.hat{ 
  height: 100px;
  width: 100px;
  position: absolute;
  border: solid 0.5rpx #f68785;
  top:100px;
}
.handle,.cancel{
  position: absolute;
  z-index: 1;
  width:20px;
  height:20px;
}
.scrollView{
   width: 90%;
   left: 5%;
   position: absolute;
   bottom: 18%;
   white-space: nowrap;
}
.imgList{
  height: 70px;
  width: 70px;
  border:1rpx solid #cdcdcd;
  margin: 5px;
}
.confirm_create{
  width: 90%;
  height: 42px;
  background-color: #36a92b;
  color: white;
}