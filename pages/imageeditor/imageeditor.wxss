@import "/pages/common/common_bar.wxss";
page{
  height: 100%;
  display: flex;
  flex-direction: column;
   background-color: #f1f1f1;
}

.container_edit{
  height:60%;
  width:100%;
  padding-top: 40px;
  padding-bottom: 10rpx;
  display: flex;
  justify-content: center;
}
.bg{
  z-index:0;
  height: 300px;
  width:300px;
  border-radius: 10px;
  border:8px solid white;
}

.hat{ 
  height: 100px;
  width: 100px;
  position: absolute;
  border: dashed 0.5rpx #EED8AE;
  top:100px;
}
.handle,.cancel{
  position: absolute;
  z-index: 1;
  width:20px;
  height:20px;
}

.scrollView{
   width: 96%;
   height: 160rpx;
   margin-top: 6rpx;
   white-space: nowrap;
}
.imgList{
  height: 127rpx;
  width: 127rpx;
  border:1px solid #ddd;
  margin: 10rpx;
  border-radius: 12px;
}

.create-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100rpx;
}

.confirm_create{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #f47771;
  color: #fff;
  text-align: center;
  font-size: 16pt;
}

.confirm_create::after{
  border: 0;
}

.bottom-view {
  width: 100%;
  height: 266rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  background: rgba(255, 255, 255, 0.95);
}